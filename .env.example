# RealCo Platform - Environment Variables Template
# Copy this to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://user:password@host:port/database

# =============================================================================
# AUTHENTICATION
# =============================================================================
JWT_SECRET=your_secure_jwt_secret_here_min_32_characters
JWT_EXPIRES_IN=8h

# =============================================================================
# PLAID (Bank Verification)
# =============================================================================
# Get credentials from: https://dashboard.plaid.com
# Sandbox is free for development, Production requires KYC approval

PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENVIRONMENT=sandbox  # sandbox | development | production

# Webhook URL for Plaid events (production only)
PLAID_WEBHOOK_URL=https://your-backend.railway.app/api/v1/webhooks/plaid

# =============================================================================
# STRIPE (Payment Processing)
# =============================================================================
# Get credentials from: https://dashboard.stripe.com/apikeys
# Test mode is free, Live mode requires business verification

STRIPE_SECRET_KEY=sk_test_... # or sk_live_... for production
STRIPE_PUBLISHABLE_KEY=pk_test_... # or pk_live_... for production
STRIPE_WEBHOOK_SECRET=whsec_... # From Stripe Dashboard > Webhooks

# =============================================================================
# ENCRYPTION & SECURITY
# =============================================================================
# Generate with: openssl rand -base64 32
BANK_ACCOUNT_ENCRYPTION_KEY=your_32_byte_encryption_key_here

# Session secret for cookie encryption
SESSION_SECRET=your_session_secret_here

# =============================================================================
# FRONTEND (Next.js/Vercel)
# =============================================================================
# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:5000/api/v1  # Dev
# NEXT_PUBLIC_API_URL=https://your-backend.railway.app/api/v1  # Production

# Plaid environment (must match backend)
NEXT_PUBLIC_PLAID_ENVIRONMENT=sandbox  # or production

# Stripe publishable key (safe to expose)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_... # or pk_live_...

# =============================================================================
# OPTIONAL: EMAIL (SendGrid)
# =============================================================================
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@realco.com

# =============================================================================
# OPTIONAL: SMS (Twilio)
# =============================================================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# OPTIONAL: FILE STORAGE (AWS S3 or Cloudflare R2)
# =============================================================================
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=realco-documents

# Cloudflare R2 (S3-compatible)
# R2_ACCOUNT_ID=your_cloudflare_account_id
# R2_ACCESS_KEY_ID=your_r2_access_key
# R2_SECRET_ACCESS_KEY=your_r2_secret_key
# R2_BUCKET=realco-documents

# =============================================================================
# OPTIONAL: MONITORING & LOGGING
# =============================================================================
# Sentry (Error Tracking)
SENTRY_DSN=https://...@sentry.io/...
NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...

# LogRocket (Session Replay)
LOGROCKET_APP_ID=your_app_id

# =============================================================================
# DEPLOYMENT
# =============================================================================
NODE_ENV=development  # development | production | test
PORT=5000  # Backend API port

# Railway deployment IDs (auto-set by Railway)
# RAILWAY_DEPLOYMENT_ID=...
# RAILWAY_GIT_COMMIT_SHA=...
# RAILWAY_ENVIRONMENT=production

# Vercel deployment (auto-set by Vercel)
# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=...
